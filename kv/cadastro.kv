<Cadastro>:
    FloatLayout:                 
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            pos_hint: {"right": 0.5, "top": 0.25}
            size_hint: 0.45, 0.2
            bold: True
            text: "Salvar"
            on_release: app.firebase.finalizar_conta(nome.text, telefone.text, endereco.text)
        TextInput:
            id: nome
            hint_text: "Nome"
            pos_hint: {"right": 0.9, "top": 0.65}
            size_hint: 0.8, 0.1
            font_size: 30
        TextInput:
            id: telefone
            hint_text: "Telefone"
            pos_hint: {"right": 0.9, "top": 0.5}
            size_hint: 0.8, 0.1
            font_size: 30
        TextInput:
            id: endereco
            hint_text: "Endere√ßo"
            pos_hint: {"right": 0.9, "top": 0.35}
            size_hint: 0.8, 0.1
            font_size: 30