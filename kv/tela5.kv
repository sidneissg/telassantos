<Tela5>:
    FloatLayout:        
    
        canvas:
            Color:
                rgb: (1, 1, 1, 0)
            Rectangle:
                size: self.size
                pos: self.pos
        ImageButton:
            pos_hint: {"right": 0.19, "top": 1}
            size_hint: 0.25, 0.1
            source: "icones/back.png"
            on_release: app.mudar_tela("produtos")
        Image:
            pos_hint: {"right": 1, "top": 0.95}
            size_hint: 1, 0.4
            source: "icones/produtos/tela5.png"
        Label:
            pos_hint: {"right": 1, "top": 0.55}
            size_hint: 1, 0.1                
            color:(255, 255, 255, 1)
            text: ""
            id: mensagem
        GridLayout:
            pos_hint: {"right": 1, "top": 0.5}
            size_hint: 1, 0.3
            rows: 4
            cols: 2
            Label:
                color:(0, 0, 0, 1)
                text: "Pre√ßo"
            Label:
                color:(0, 0, 0, 1)
                text: "R$ 90,00"
            Label:
                color:(0, 0, 0, 1)
                text: "Altura (cm)"
            FloatLayout:
                TextInput:
                    pos_hint: {"right": 0.7, "top": 0.65}
                    size_hint: 0.4, 0.5
                    hint_text: "60"
                    font_size: 8
                    id: altura
            Label:
                color:(0, 0, 0, 1)
                text: "Largura (cm)"
            FloatLayout:
                TextInput:
                    pos_hint: {"right": 0.7, "top": 0.65}
                    size_hint: 0.4, 0.5
                    hint_text: "90"
                    font_size: 8
                    id: largura
            Label:
                color:(0, 0, 0, 1)
                text: "Total"
            Label:
                color:(0, 0, 0, 1)
                text: "R$"
                id: id_total
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            pos_hint: {"right": 0.4, "top": 0.2}
            size_hint: 0.3, 0.1
            text: "Calcular"
            on_release: app.calcular_preco("tela5", "branca", altura.text, largura.text)
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            pos_hint: {"right": 0.9, "top": 0.2}
            size_hint: 0.3, 0.1
            text: "Fazer Pedido"
            on_release: app.enviar_pedido("inox", "tela1", altura.text, largura.text)
            
